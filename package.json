{
  "name": "angular-starter-20",
  "version": "1.0.1",
  "description": "Angular Starter 20",
  "author": "ZenKiet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenkiet/angular-starter-20.git"
  },
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "build": "ng build",
    "build:staging": "ng build --configuration staging",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "lint": "npx eslint .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "analyze-bundle": "ng build --configuration=analyze-bundle && source-map-explorer dist/**/*.js --no-border-checks"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.1.6",
    "@angular/cdk": "20.1.5",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "20.1.5",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/service-worker": "^20.1.0",
    "countup.js": "^2.9.0",
    "dayjs": "^1.11.13",
    "es-toolkit": "^1.39.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "ngx-mask": "^20.0.3",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.2",
    "swiper": "^11.2.10",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "zod": "^4.0.16",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.1.1",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "angular-eslint": "20.1.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-rdjson": "^1.0.6",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "source-map-explorer": "^2.5.3",
    "tailwindcss-debug-screens": "^3.0.1",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.34.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix ",
    "*.{ts,scss,html,json}": "prettier --cache --write"
  }
}
